@page
@model CallForBids.Areas.RPBids.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bids</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.PublicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.PublicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.LimitDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.LimitDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.FiscalYear)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.FiscalYear)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.Office)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.Office.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.Project)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.Project.Poet)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids.IsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bids.IsAvailable)
        </dd>
    </dl>
    <hr />
    <h4>Historic of Submissions</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Bid</th>
                <th>Date of submission</th>
                <th>Deadline</th>
                <th>State</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Bids.Submissions)

            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bid.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bid.LimitDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        <a asp-area="RPSubmissions" asp-page="/Details" asp-route-id="@item.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Bids.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
