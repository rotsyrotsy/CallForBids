@page
@model CallForBids.Areas.RPSuppliers.Pages.DetailsModel

@{
    ViewData["Title"] = "Details";
    
}

<h1>Details</h1>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suppliers.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suppliers.SupplierNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.SupplierNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suppliers.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suppliers.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Suppliers.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Suppliers.Email)
        </dd>
    </dl>
    <hr />
    <h4>Historic of Submissions</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Bid</th>
                    <th>Date of submission</th>
                    <th>Deadline</th>
                    <th>State</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Suppliers.User.Submissions)
            
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bid.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Bid.LimitDate)
                        </td>
                        <td>
                            @(item.State == 1 ? "accepted" : (item.State == 2 ? "refused" : "pending"))
                        </td>
                        <td>
                            <a asp-area="RPSubmissions" asp-page="/Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Suppliers.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
